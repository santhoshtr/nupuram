input glyph;
beginglyph;

z0=(x1+mw/3, 0);
z1=(0, y0 + m/2);
z2=(x1 + mw/3, m);
z3=(x2 + mw/3, m/2);
z4=(x3, m/6); % bottom of piller
paths[0] = z0..z1.. z2.. {down}z3---z4 ;

z5=(x3, y3);
z6=(x5 + mw/3, 0.9m); % Top of second arch
z7=(x6 + mw/4 , m/2);
z8= ( x7 + mw/4, 0.05m);
z9 = ( x8 + mw/3, m/2);

paths[1] = z5{dir 90}..z6{dir -20}..{dir -80}z7{dir -80}..z8{dir -20}..{up}z9;
paths[1]:= paths[1] slanted tand(8) shifted (-tand(8)*mw/2, 0);
pen_stroke(
    nib(thicknib rotated 0 )(0, 2)
    nib(thinnib rotated 0 )(1, 3)
    nib(terminalnib rotated terminalangle 0 of paths[0])(0)
    nib(terminalnib rotated terminalangle infinity of paths[0])(infinity)
)(paths[0])(strokes[0]);
pen_stroke(
    nib(thicknib rotated 0 )(1, 3, 5, 7)
    nib(thinnib rotated 0 )(2, 4, 6)
    nib(thinterminalnib rotated terminalangle 0 of paths[1])(0)
    nib(thinterminalnib rotated terminalangle infinity of paths[1])(infinity)
)(paths[1])(strokes[1]);
clearxy;
z0=(xpart(point infinity of paths[1]), m-m/6); % top of piller
z1=(x0, m/2);
z2=(x1 +  mw/3, y1 - m/2); % Top of second arch
z3=(x2 +  mw/3, y2 + m/2);
z4=(x3 -  mw/3, y3 + m/2);


paths[2] = z0---z1..z2{dir -10}..z3..z4;
pen_stroke(
    nib(thicknib rotated 0 )(1, 3, 5, 7)
    nib(thinnib rotated 0 )(1,3,5)
    nib(terminalnib rotated terminalangle 0 of paths[2])(0)
    nib(terminalnib rotated terminalangle infinity of paths[2])(infinity)
)(paths[2])(strokes[2]);.
anchor( "vc", point 2 of paths[1]);
anchor( "bottom", point 2.3 of paths[2]);
anchor( "right", point 2.3 of paths[2]);
endglyph;
