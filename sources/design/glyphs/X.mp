input glyph;

beginglyph;

w := 0.6X;
z0=(0, X);
z1=(x0 + w/2, y0 - 0.5X);
z2=(x1 + w/2 , y1 - 0.5X);

z3=(0, 0);
z4=(x3 + w/2, y3 + 0.5X);
z5=(x4 + w/2, y4 + 0.5X);


paths[0]:= z0..z1..{dir -45}z2;
paths[1] = z3{dir 45}..z4..z5;

pen_stroke(
    nib(default_nib xyscaled(1, 1) rotated 0 )(2,   4 )
    nib(default_nib xyscaled(thin, thin) rotated 0 )(1, 3, 5)
    nib(default_nib xyscaled(xthick,terminalround) rotated 30)(0) % Sharp cut
    nib(default_nib xyscaled(xthick,terminalround) rotated 30)(infinity) % Sharp cut
)(paths[0])(strokes[0]);

pen_stroke(
    nib(default_nib xyscaled(1, 1) rotated 0 )(2,   4 )
    nib(default_nib xyscaled(thin, thin) rotated 0 )(1, 3, 5)
    nib(default_nib xyscaled(xthick,terminalround) rotated 135)(0) % Sharp cut
    nib(default_nib xyscaled(xthick,terminalround) rotated 135)(infinity) % Sharp cut
)(paths[1])(strokes[1]);

endglyph;
